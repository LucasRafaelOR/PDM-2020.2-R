<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MinhasCores" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_light</item>
        <item name="colorSecondaryVariant">@color/pink_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MinhasCoresBlue" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorSecondary">#00AFFF</item>
        <item name="colorSecondaryVariant">@color/blue</item>
    </style>

    <style name="Theme.MinhasCoresRed" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorSecondary">#FD2E2E</item>
        <item name="colorSecondaryVariant">@color/red</item>
    </style>

    <style name="Theme.MinhasCoresGreen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorSecondary">#3BD630</item>
        <item name="colorSecondaryVariant">@color/green</item>
    </style>
</resources>